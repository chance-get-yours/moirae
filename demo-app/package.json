{
  "name": "demo-app",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretypeorm": "yarn build",
    "typeorm": "node --require ts-node/register ../node_modules/typeorm/cli.js --config ormconfig.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "env NODE_ENV=test jest --config ./test/jest-e2e.json --runInBand"
  },
  "dependencies": {
    "@moirae/core": "workspace:^",
    "@moirae/node-plugin": "workspace:^",
    "@moirae/rabbitmq": "workspace:^",
    "@moirae/redis": "workspace:^",
    "@moirae/typeorm": "workspace:^",
    "@nestjs/common": "^9.1.4",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^9.1.4",
    "@nestjs/platform-express": "^9.1.4",
    "@nestjs/platform-ws": "^9.1.2",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjs/websockets": "^9.0.11",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "sqlite": "^4.1.1",
    "sqlite3": "^5.1.1",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.4.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^9.0.11",
    "@types/express": "^4.17.14",
    "@types/jest": "28.1.1",
    "@types/node": "^18.8.4",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.40.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "28.1.1",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.0",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.3.5",
    "ws": "^8.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "restoreMocks": true
  }
}
