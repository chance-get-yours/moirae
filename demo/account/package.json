{
  "name": "@demo/account",
  "version": "1.0.0",
  "description": "Account management module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run prebuild && tsc -p tsconfig.build.json",
    "prebuild": "rimraf ./dist",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@demo/common": "*",
    "@demo/inventory": "*",
    "@moirae/core": "*",
    "typeorm": "~0.3.10",
    "@nestjs/typeorm": "~9.0.1",
    "@nestjs/common": "~9.1.6",
    "class-transformer": "~0.5.1",
    "class-validator": "~0.13.2"
  },
  "devDependencies": {
    "typescript": "~4.8.4",
    "ts-jest": "~29.0.3",
    "@types/jest": "~29.2.0",
    "jest": "~29.2.2",
    "@faker-js/faker": "~7.6.0",
    "@nestjs/testing": "~9.1.6",
    "rimraf": "~3.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "restoreMocks": true
  }
}
