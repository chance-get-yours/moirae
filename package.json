{
  "name": "moirae",
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "packages/*",
    "demo-app"
  ],
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "build": "yarn packages run build",
    "core": "yarn workspace @moirae/core",
    "demo": "yarn workspace demo-app",
    "document": "typedoc",
    "lint": "eslint --fix",
    "packages": "yarn workspaces foreach --exclude=demo-app --exclude=moirae",
    "prepare": "husky install",
    "redis": "yarn workspace @moirae/redis",
    "rmq": "yarn workspace @moirae/rabbitmq",
    "typeorm": "yarn workspace @moirae/typeorm",
    "version-packages": "yarn workspaces foreach --exclude=demo-app version"
  },
  "devDependencies": {
    "@knodes/typedoc-plugin-monorepo-readmes": "^0.22.5",
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.11",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^13.0.3",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typedoc": "^0.22.15",
    "typedoc-monorepo-link-types": "^0.0.2",
    "typedoc-plugin-external-module-map": "^1.3.2",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
