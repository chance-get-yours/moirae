{
  "name": "moirae",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo-app"
  ],
  "version": "0.1",
  "scripts": {
    "build": "yarn workspaces foreach --all --exclude=demo-app run build",
    "core": "yarn workspace @moirae/core",
    "demo": "yarn workspace demo-app",
    "document": "typedoc",
    "lint": "eslint --fix",
    "orm": "yarn workspace @moirae/typeorm-store",
    "prepare": "husky install",
    "rmq": "yarn workspace @moirae/rabbitmq-publisher"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.11",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typedoc": "^0.22.15",
    "typedoc-plugin-external-module-map": "^1.3.2",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
